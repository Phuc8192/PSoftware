@model List<PSoftware.Models.LoaiSanPham>

@{
    ViewBag.Title = "Danh sách loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "MaLSP", rowsPerPage: 10);
}

<style>
    .alternatingRowStyle {
        background-color: #e3f2fd;
    }

    .grid-footer {
        color: #000;
        font: 20px;
        text-align: center;
        font-weight: bold;
    }

        .grid-footer --> a {
            background-color: #ffffff;
            color: #007bff;
            padding: 8px;
        }

            .grid-footer --> a:active, a:hover {
                background-color: #ffffff;
                color: #FFAD33;
            }
</style>
<h3 style="text-align: center; padding:30px;">Danh Sách Loại Sản Phẩm</h3>
<p>
    @Html.ActionLink("Thêm loại sản phẩm", "Create")
</p>
<div id="gridContent">
    @grid.GetHtml(
        tableStyle: "table table-bordered table-hover",
        footerStyle: "grid-footer",
        fillEmptyRows: true,
        mode: WebGridPagerModes.Numeric,
        alternatingRowStyle: "alternatingRowStyle",
        columns: new[]  // colums in grid
        {
            grid.Column("MaLSP","Mã LSP"), //the model fields to display
            grid.Column("TenLSP","Tên LSP"  ),
            grid.Column(format: (item) => Html.ActionLink("Sửa", "Edit", "QLLoaiSanPhams",new { id = item.MaLSP },"QLLoaiSanPhamsController")),
            grid.Column(format: (item) => Html.ActionLink("Xem", "Details","QLLoaiSanPhams", new { id = item.MaLSP },"QLLoaiSanPhamsController")),
            grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","QLLoaiSanPhams", new { id = item.MaLSP },"QLLoaiSanPhamsController")),
        }
    )
</div>
