
<!DOCTYPE html>
<!-- Designined by CodingLab | www.youtube.com/codinglabyt -->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.title</title>
    <link rel="stylesheet" href="~/Scripts/LayoutPage/LayoutPage.css">
    <!-- Boxiocns CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>
</head>
<body>
    <div class="sidebar close">
        <header>
            <div class="logo-details">
                <i class='bx bx-chevron-right toggle' style="color: #11101d;"></i>
                <i class='bx bxl-c-plus-plus'></i>
                <span class="logo_name">PSoftware</span>
            </div>
        </header>

        <!-- <header>
          <div class="image-text">
              <i class='bx bxl-c-plus-plus'></i>

              <div class="text logo-text">
                  <span class="name">Codinglab</span>
                  <span class="profession">Web developer</span>
              </div>
          </div>

          <i class='bx bx-chevron-right toggle'></i>
        </header> -->

        <ul class="nav-links">
            <li>
                <a href="#">
                    <i class='bx bx-search'></i>
                    @*<span class="link_name search-box"><input type="text" placeholder="Search..."></span>*@
                    @Html.Partial("_SearchPartial")
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Tìm kiếm</a></li>
                    <!-- <li><span class="link_name"><input type="text" placeholder="Search..."></span></li> -->
                </ul>
            </li>

            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class='bx bx-home'></i>
                    <span class="link_name">Trang chủ</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                </ul>
            </li>
            <li>
                <div class="iocn-link">
                    <a href="#">
                        <!-- <i class='bx bx-collection' ></i> -->
                        <i class='bx bxs-category'></i>
                        <span class="link_name">Thể Loại</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><a class="link_name" href="#">Thể Loại</a></li>
                    @{ Html.RenderAction("_ProductCategory", "TheLoais");}
                    @*<li><a href="#">Action</a></li>
                    <li><a href="#">Adventure</a></li>
                    <li><a href="#">FPS</a></li>
                    <li><a href="#">Simulator</a></li>
                    <li><a href="#">Stragedy</a></li>
                    <li><a href="#">Indie</a></li>*@
                </ul>
            </li>
            <li>
                <div class="iocn-link">
                    <a href="@Url.Action("IndexGame", "LoaiSanPhams")">
                        <i class='bx bx-film'></i>
                        <span class="link_name">Game</span>
                    </a>                   
                </div>
                <ul class="sub-menu">
                    <li><a class="link_name" href="@Url.Action("IndexGame", "LoaiSanPhams")">Game</a></li>                  
                </ul>
            </li>
            <li>
                <a href="@Url.Action("IndexSoftware", "LoaiSanPhams")">
                    <i class='bx bxl-windows'></i>
                    <span class="link_name">Phần Mềm</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("IndexSoftware", "LoaiSanPhams")">Phần Mềm</a></li>
                </ul>
            </li>
            <li>
                <a href="@Url.Action("Index", "Cart")">
                    <i class='bx bx-cart'></i>
                    <span class="link_name">Giỏ Hàng</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="@Url.Action("Index", "Cart")">Giỏ Hàng</a></li>
                </ul>
            </li>
            <li>
                @if (Session["TenDN"] != null)
                {
                    <a href="@Url.Action("Index", "User", new { id = Session["MaKH"]})">
                        <i class="fa-solid fa-user"></i>
                        <span class="link_name">Thông tin</span>
                    </a>
                    <ul class="sub-menu blank">
                        <li><a class="link_name" href="@Url.Action("Index", "User", new { id = Session["MaKH"]})">Thông tin</a></li>
                    </ul>
                }
                else
                {
                    <a href="#" onclick="return confirm('Bạn phải đăng nhập để xem!');">
                        <i class="fa-solid fa-user"></i>
                        <span class="link_name">Thông tin</span>
                    </a>
                    <ul class="sub-menu blank">
                        <li><a class="link_name" href="#" onclick="return confirm('Bạn phải đăng nhập để xem!');">Thông tin</a></li>
                    </ul>
                }
            </li>            
            <li>
                @if (Session["TenDN"] != null)
                {
                    <a href="@Url.Action("Index", "HoaDons", new { id = Session["MaKH"]})">
                        <i class='bx bx-history'></i>
                        <span class="link_name">Lịch sử</span>
                    </a>
                    <ul class="sub-menu blank">
                        <li><a class="link_name" href="@Url.Action("Index", "HoaDons", new { id = Session["MaKH"]})">Lịch sử</a></li>
                    </ul>
                }
                else
                {
                    <a href="#" onclick="return confirm('Bạn phải đăng nhập để xem!');">
                        <i class='bx bx-history'></i>
                        <span class="link_name">Lịch sử</span>
                    </a>
                    <ul class="sub-menu blank">
                        <li><a class="link_name" href="#" onclick="return confirm('Bạn phải đăng nhập để xem!');">Lịch sử</a></li>
                    </ul>
                }
            </li>
            @*<li>
                <a href="#">
                    <i class='bx bx-cog'></i>
                    <span class="link_name">Setting</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Setting</a></li>
                </ul>
            </li>*@
            <li>
                <div class="profile-details">
                    <div class="profile-content">
                        <i class='bx bxs-user-account'></i>
                        <!-- <img src="image/profile.jpg" alt="profileImg"> -->
                    </div>
                    @if (Session["TenDN"] != null)
                    {
                        <div class="name-job">
                            <div class="profile_name">@Session["TenDN"].ToString()</div>
                            @*<div class="job">Web Desginer</div>*@
                        </div>
                        <a href="@Url.Action("Logoff", "User")"><i class='bx bx-log-out'></i></a>
                    }
                    else
                    {
                        <div class="name-job">
                            <div class="profile_name"><a class="link_name" style="color:#F6F5FF" href="@Url.Action("Login", "User")">Đăng Nhập</a></div>
                            @*Đăng nhập*@
                            <div class="job">Khách hàng</div>
                        </div>
                        <i></i>
                    }
                </div>
            </li>
        </ul>
    </div>
    <section class="home-section">
        @RenderBody()
    </section>
    <script src="https://kit.fontawesome.com/0fdbaedebb.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/LayoutPage/LayoutPage.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/assets/plugins/ckfinder/ckfinder.js"></script>
    <script src="~/assets/plugins/ckeditor/ckeditor.js"></script>
    @RenderSection("jsFooter", required: false)
</body>
</html>

