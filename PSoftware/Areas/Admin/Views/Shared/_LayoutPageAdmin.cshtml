
<!DOCTYPE html>
<!-- Designined by CodingLab | www.youtube.com/codinglabyt -->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.title</title>
    <link rel="stylesheet" href="~/Scripts/LayoutPage/LayoutPage.css">
    <!-- Boxiocns CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>
</head>
<body>
    <div class="sidebar close">
        <header>
            <div class="logo-details">
                <i class='bx bx-chevron-right toggle' style="color: #11101d;"></i>
                <i class='bx bxl-c-plus-plus'></i>
                <span class="logo_name">PSoftware</span>
            </div>
        </header>
        <ul class="nav-links">
            @if (Session["TenDNNV"] != null)
            {
                <li>
                    <a href="@Url.Action("Index", "HomeAdmin")">
                        <i class='bx bx-home'></i>
                        <span class="link_name">Trang chủ</span>
                    </a>
                    <ul class="sub-menu">
                        <li><a class="link_name" href="@Url.Action("Index", "HomeAdmin")">Trang chủ</a></li>
                    </ul>
                </li>
                <li>
                    <div class="iocn-link">
                        <a href="@Url.Action("Index", "QLSanPhams")">
                            <i class="fa fa-gamepad"></i>
                            <span class="link_name">Sản Phẩm</span>
                        </a>
                    </div>
                    <ul class="sub-menu">
                        <li><a class="link_name" href="@Url.Action("Index", "QLSanPhams")">Sản Phẩm</a></li>
                    </ul>
                </li>
                <li>
                    <div class="iocn-link">
                        <a href="@Url.Action("Index", "QLNhaPhatTriens")">
                            <i class="fa-solid fa-code"></i>
                            <span class="link_name">NPT</span>
                        </a>
                    </div>
                    <ul class="sub-menu">
                        <li><a class="link_name" href="@Url.Action("Index", "QLNhaPhatTriens")">Nhà Phát Triển</a></li>
                    </ul>
                </li>
                <li>
                    <div class="iocn-link">
                        <a href="@Url.Action("Index", "QLLoaiSanPhams")">
                            <i class='bx bxl-windows'></i>
                            <span class="link_name">LSP</span>
                        </a>
                    </div>
                    <ul class="sub-menu blank">
                        <li><a class="link_name" href="@Url.Action("Index", "QLLoaiSanPhams")">Loại Sản Phẩm</a></li>
                    </ul>
                </li>
                <li>
                    <div class="iocn-link">
                        <a href="@Url.Action("Index", "QLTheLoais")">
                            <i class="fa-solid fa-tags"></i>
                            <span class="link_name">TL</span>
                        </a>
                    </div>
                    <ul class="sub-menu blank">
                        <li><a class="link_name" href="@Url.Action("Index", "QLTheLoais")">Thể Loại</a></li>
                    </ul>
                </li>
                <li>
                    <div class="iocn-link">
                        <a href="@Url.Action("Index", "QLNhanViens")">
                            <i class="fa-solid fa-user-secret"></i>
                            <span class="link_name">Nhân viên</span>
                        </a>
                    </div>
                    <ul class="sub-menu">
                        <li><a class="link_name" href="@Url.Action("Index", "QLNhanViens")">Nhân viên</a></li>
                    </ul>
                </li>
                <li>
                    <a href="@Url.Action("Index", "QLKhachHangs")">
                        <i class="fa-solid fa-user"></i>
                        <span class="link_name">Khách hàng</span>
                    </a>
                    <ul class="sub-menu">
                        <li><a class="link_name" href="@Url.Action("Index", "QLKhachHangs")">Khách hàng</a></li>
                    </ul>
                </li>
                <li>
                    <div class="iocn-link">
                        <a href="#">
                            <i class="fa-solid fa-computer"></i>
                            <span class="link_name">Cấu hình</span>
                        </a>
                        <i class='bx bxs-chevron-down arrow'></i>
                    </div>
                    <ul class="sub-menu">
                        <li><a class="link_name" href="#">Cấu hình</a></li>
                        <li><a href="@Url.Action("Index", "QLCauHinhYeuCaus")">Cấu hình yêu cầu</a></li>
                        <li><a href="@Url.Action("Index", "QLCauHinhKhuyenNghis")">Cấu hình khuyến nghị</a></li>
                    </ul>
                </li>
                <li>
                    <a href="@Url.Action("Index", "QLHoaDons")">
                        <i class='bx bx-cog'></i>
                        <span class="link_name">Hóa Đơn</span>
                    </a>
                    <ul class="sub-menu blank">
                        <li><a class="link_name" href="@Url.Action("Index", "QLHoaDons")">Hóa Đơn</a></li>
                    </ul>
                </li>
            }
            <li>
                <div class="profile-details">
                    <div class="profile-content">
                        <i class='bx bxs-user-account'></i>
                    </div>
                    @if (Session["TenDNNV"] != null)
                    {
                        <div class="name-job">
                            <div class="profile_name">@Session["TenDNNV"].ToString()</div>
                        </div>
                            <a href="@Url.Action("Logoff", "HomeAdmin")"><i class='bx bx-log-out'></i></a>
                    }
                    else
                    {
                        <div class="name-job">
                            <div class="profile_name">@Html.ActionLink("Đăng nhập", "Login", "HomeAdmin")</div>
                            <div class="job">Quản Trị</div>
                        </div>
                            <i></i>
                    }
                </div>
            </li>
        </ul>
    </div>
    <section class="home-section">
        @RenderBody()
    </section>
    <script src="https://kit.fontawesome.com/0fdbaedebb.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/LayoutPage/LayoutPage.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/assets/plugins/ckfinder/ckfinder.js"></script>
    <script src="~/assets/plugins/ckeditor/ckeditor.js"></script>
    @RenderSection("jsFooter", required: false)
</body>
</html>

