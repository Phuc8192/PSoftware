@model PSoftware.Models.TheLoai

@{
    ViewBag.Title = "Chỉnh sửa thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTL)
        <div class="container card" style="width: 55rem; padding: 30px; margin-top: 10px; margin-bottom: 10px;">
            <h3 style="margin: 20px 0px; text-align: center">CHỈNH SỬA THỂ LOẠI</h3>
            <hr />
            <h5 style="margin-bottom: 10px">Thông tin cơ bản</h5>
            <div class="form-row">
                <div class="form-group col">
                    @Html.LabelFor(model => model.MaTL, "Mã thể loại", htmlAttributes: new { @for = "inputMaTL" })
                    @Html.EditorFor(model => model.MaTL, new { htmlAttributes = new { @class = "form-control", @id = "inputMaTL", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.MaTL, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col">
                    @Html.LabelFor(model => model.TenTL, "Tên thê loại", htmlAttributes: new { @for = "inputTenTL" })
                    @Html.EditorFor(model => model.TenTL, new { htmlAttributes = new { @class = "form-control", @id = "inputTenTL" } })
                    @Html.ValidationMessageFor(model => model.TenTL, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group text-center">
                <input type="submit" value="Cập nhập thể loại" class="btn btn-primary text-white" style="width: 200px; margin-top: 20px;" />
            </div>
            <div class="form-group text-center">
                @Html.ActionLink("Quay lại danh sách thể loại", "Index")
            </div>
        </div>
    </div>
}
