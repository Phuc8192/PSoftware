                            {
                                <a class="small text-white stretched-link" href="@Url.Action("Index","QLKhachHangs")"><h4>Khách Hàng</h4></a>
                            }
                            else
                            {
                                <a class="small text-white stretched-link" href="#" onclick="return confirm('Bạn phải đăng nhập để xem!');"><h4>Khách Hàng</h4></a>
                            }
                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card bg-info text-dark mb-4">
                        <div class="card-body"><h2>@ViewBag.nhanVien</h2></div>
                        <div class="card-footer d-flex align-items-center justify-content-between">
