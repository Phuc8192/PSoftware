@model IEnumerable<PSoftware.Models.SanPham>

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<link rel="stylesheet" href="~/Scripts/TheLoai/Details.css"/>
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12 col-lg-4 mb-4 pb-4 mb-lg-0">
                    <div class="card product-card">
                        <div class="d-flex justify-content-between p-3">
                            @*<p class="lead mb-0">Today's Combo Offer</p>*@
                            <div class="bg-info rounded-circle d-flex align-items-center justify-content-center shadow-1-strong"
                                 style="width: 35px; height: 35px;">
                                @*<p class="text-white mb-0 small">x4</p>*@
                            </div>
                        </div>
                        <img src="@item.Anh"
                             class="card-img-top" alt="Laptop" />
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <p class="small"><a href="#!" class="text-muted">@item.LoaiSanPham.TenLSP</a></p>
                                <p class="small text-danger">@String.Format("{0:0,00} VND", item.Gia)</p>
                            </div>

                            <div class="d-flex justify-content-between mb-3 product-name">
                                <h6 class="mb-0">@item.TenSP</h6>
                                @*<h5 class="text-dark mb-0">@item.Gia</h5>*@
                            </div>

                            <div class="d-flex justify-content-between mb-2">
                                <p class="text-muted mb-0">Thể loại: <span class="fw-bold">@item.TheLoai.TenTL</span></p>
                                <div class="ms-auto text-success">
                                    @*<i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>*@
                                    <i class="fa-solid fa-cart-plus"></i>
                                    @*<i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>