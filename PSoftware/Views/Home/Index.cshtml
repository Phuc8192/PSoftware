@model IEnumerable<PSoftware.Models.SanPham>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";

    var slide = 0;   
}

<div class="container">
    <h4 class="pt-4">
        <span class="badge bg-info text-dark">Sản Phẩm Mới</span>
    </h4>
        <div class="row pt-4">
            <div class="product-group">
                <div class="row">
                    <div class="col-md-8 col-sm-12 col-12">
                        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                @foreach (var item in Model.Take(7))
                                {
                                    slide++;
                                    var active = slide == 1 ? "active" : "";
                                    <div class="carousel-item @active">
                                        <img src="@item.Anh" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5 class="badge bg-warning text-dark">@item.TenSP</h5>
                                            @*<p>Some representative placeholder content for the first slide.</p>*@
                                        </div>
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>

                    <div class="col-md-4 col-12" style="height:100%">
                        @{ Html.RenderAction("IndexRight", "Home");}
                        @*@foreach (var item in Model.Take(2))
                        {
                            <div class="col-md-12 col-sm-6 col-12" style="height:50%">
                                <div class="card card-product">
                                    <img class="card-img-top" src="@item.Anh" alt="Card image cap">                                   
                                </div>
                            </div>
                        }*@
                    </div>

                    @foreach (var item in Model.Take(4))
                    {
                        <div class="col-md-3 col-sm-6 col-12">
                            <div class="card card-product mb-3">
                                <img class="card-img-top" src="@item.Anh" alt="Card image cap">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
</div>
<hr />
@{ Html.RenderAction("IndexAction", "Home");}
<hr />
@{ Html.RenderAction("IndexAdven", "Home");}
<hr />
@{ Html.RenderAction("IndexRPG", "Home");}
