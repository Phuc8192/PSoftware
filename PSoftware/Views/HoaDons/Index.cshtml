@using PagedList.Mvc;
@model PagedList.IPagedList<PSoftware.Models.HoaDon>
@{
    ViewBag.Title = "Hóa đơn";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    string Tthai = "";
}
<link rel="stylesheet" href="~/Content/PagedList.css">
<h2 style="text-align: center; padding:30px;">Lịch sử mua hàng</h2>


<table class="table">
    <tr>
        <th>
            Mã Hóa Đơn
        </th>
        <th>
            Ngày Mua
        </th>
        <th>
            Trạng Thái
        </th>
        <th>
            CD-Key
        </th>
        <th>
            Chi Tiết
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayBan)
            </td>
            @if (item.TrangThai == true)
            {
                Tthai = "Đã duyệt";
                <td class="btn btn-success">@Tthai</td>
                <td><a href="@Url.Action("Index","CDKeys",new { id = item.MaHD})">Xem</a></td>
            }
            else
            {
                Tthai = "Chưa duyệt";
                <td class="btn btn-danger">@Tthai</td>
                <td></td>
            }
            <td>
                <a href="@Url.Action("Index","ChiTietHoaDons",new { id = item.MaHD})">Xem</a>
            </td>
        </tr>
    }

</table>
<div class="pagination">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, id = Session["MaKH"] }))
</div>

