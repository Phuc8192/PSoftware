@model PSoftware.Models.KhachHang

@{
    ViewBag.Title = "Chỉnh sửa thông tin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaKH)
        <div class="container card" style="width: 55rem; padding: 30px; margin-top: 10px; margin-bottom: 10px;">
            <h3 style="margin: 20px 0px; text-align: center">CHỈNH SỬA THÔNG TIN NHÂN VIÊN</h3>
            <hr />
            <h5 style="margin-bottom: 10px">Thông tin cơ bản</h5>
            <div>
                <div class="form-group col">
                    @Html.LabelFor(model => model.MaKH, "Mã khách hàng", htmlAttributes: new { @for = "inputMaKH" })
                    @Html.EditorFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control", @id = "inputMaKH", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-4">
                <div class="col">
                    @Html.LabelFor(model => model.HoKH, "Họ khách hàng", htmlAttributes: new { @for = "inputHoKH" })
                    @Html.EditorFor(model => model.HoKH, new { htmlAttributes = new { @class = "form-control", @id = "inputHoKH" } })
                    @Html.ValidationMessageFor(model => model.HoKH, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.TenKH, "Tên khách hàng", htmlAttributes: new { @for = "inputTenKH" })
                    @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control", @id = "inputTenKH" } })
                    @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="row mb-4">
                @Html.LabelFor(model => model.GioiTinh, "Giới tính:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        Nam @Html.RadioButtonFor(model => model.GioiTinh, "True", new { @checked = "checked" }) &nbsp;
                        Nữ @Html.RadioButtonFor(model => model.GioiTinh, "False")
                        @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                @Html.LabelFor(model => model.NgaySinh, "Ngày sinh:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-4">
                <div class="col">
                    @Html.LabelFor(model => model.SDT, "Số điện thoại", htmlAttributes: new { @for = "inputSDT" })
                    @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control", @id = "inputSDT" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @for = "inputEmail" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "inputEmail" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-4">
                <div class="col">
                    @Html.LabelFor(model => model.DiaChi, "Địa chỉ", htmlAttributes: new { @for = "inputEmail" })
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @id = "inputDiaChi" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <h5 style="margin-bottom: 10px">Tạo tài khoản</h5>
            <div class="row mb-4">
                <div class="col">
                    @Html.LabelFor(model => model.TenDN, "Tên đăng nhập", htmlAttributes: new { @for = "inputTenDN" })
                    @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control", @id = "inputTenDN" } })
                    @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.MatKhau, "Mật khẩu", htmlAttributes: new { @for = "inputMK" })
                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @id = "inputMK", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Chỉnh sửa" class="btn btn-primary text-white" style="width: 200px; margin-top: 20px;" />
            </div>
            <div class="form-group text-center">
                @Html.ActionLink("Quay lại danh sách khách hàng", "Index")
            </div>
        </div>
    </div>
}
