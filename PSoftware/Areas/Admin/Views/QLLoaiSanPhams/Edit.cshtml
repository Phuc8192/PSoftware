@model PSoftware.Models.LoaiSanPham

@{
    ViewBag.Title = "Chỉnh sửa loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaLSP)
        <div class="container card" style="width: 55rem; padding: 30px; margin-top: 10px; margin-bottom: 10px;">
            <h3 style="margin: 20px 0px; text-align: center">CHỈNH SỬA LOẠI SẢN PHẨM</h3>
            <hr />
            <h5 style="margin-bottom: 10px">Thông tin cơ bản</h5>
            <div class="form-row">
                <div class="form-group col">
                    @Html.LabelFor(model => model.MaLSP, "Mã loại sản phẩm", htmlAttributes: new { @for = "inputMaLSP" })
                    @Html.EditorFor(model => model.MaLSP, new { htmlAttributes = new { @class = "form-control", @id = "inputMaLSP", @readonly = "" } })
                    @Html.ValidationMessageFor(model => model.MaLSP, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col">
                    @Html.LabelFor(model => model.TenLSP, "Tên loại sản phẩm", htmlAttributes: new { @for = "inputTenLSP" })
                    @Html.EditorFor(model => model.TenLSP, new { htmlAttributes = new { @class = "form-control", @id = "inputTenLSP" } })
                    @Html.ValidationMessageFor(model => model.TenLSP, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group text-center">
                <input type="submit" value="Cập nhập loại sản phẩm" class="btn btn-primary text-white" style="width: 200px; margin-top: 20px;" />
            </div>
            <div class="form-group text-center">
                @Html.ActionLink("Quay lại danh sách loại sản phẩm", "Index")
            </div>
        </div>
    </div>
}
